import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Scanner reader = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int num = reader.nextInt();
        int number = 0;
       for (int i=0;i<=num;i++)
       {
           number = number+i;
       }
        System.out.println(number);
    }
}
